/* pages/square_main/square_main.wxss */
.header {
  display: flex;
  flex-direction: column;
  padding: 0 0 0 5%;
  margin-bottom: 30rpx;
}

.link-top {
  width: 80%;
  height: 1rpx;
  border-top: solid rgb(170, 172, 175) 1rpx;
  margin-bottom: 30rpx;
  position: relative;
  left: 20%;
}

.other-letter {
  display: flex;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.other-user {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 20rpx;
}

.user-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.other-content {
  display: flex;
  width: 55%;
  flex-direction: column;
  text-align: left;
  font-size: 30rpx;
}

.conten-voice {
  display: flex;
}

.content-image {
  width: 25%;
  height: 200rpx;
}

