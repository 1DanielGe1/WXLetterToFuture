/* pages/letter_main/letter_main.wxss */
.header {
  text-align: center;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.header .author {
  text-align: right;
  font-size: 60rpx;
}

.link-top {
  width: 100%;
  height: 1rpx;
  border-top: solid rgb(170, 172, 175) 1rpx;
  margin-bottom: 30rpx;
}

.letter {
  display: flex;
  margin-bottom: 30rpx;
}

.letter-state {
  width: 200rpx;
  display: flex;
  text-align: center;
  flex-direction: column;
}

.letter-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.letter-image {
  width: 200rpx;
  height: 200rpx;
}

.add_icon {
  position: fixed;
  width: 84rpx;
  height: 84rpx;
  bottom: 60rpx;
  right: 40rpx;
}